{
    "$schema": "https://advancedcustomfields.com/schemas/json/main/block.json",
    "apiVersion": 2,
    "name": "acf/star-rating", 
    "title": "⭐ Star Rating",
    "description": "Sistema completo di valutazioni a stelle con supporto per stelle parziali, animazioni e stili multipli. Include microdata Schema.org per SEO.",
    "style": [ 
        "file:./star-rating.css"
    ],
    "script": "file:./star-rating.js",
    "category": "design",
    "icon": "star-filled",
    "keywords": [
        "star",
        "rating", 
        "valutazione",
        "stelle",
        "recensioni",
        "feedback",
        "voto",
        "qualità"
    ],
    "example": {
        "attributes": {
            "data": {
                "rating": 4.5,
                "total_reviews": 127,
                "rating_text": "Eccellente",
                "show_numeric": true,
                "star_size": "medium",
                "star_style": "filled"
            }
        }
    },
    "acf": {
        "mode": "edit",
        "renderTemplate": "star-rating.php"
    },
    "supports": {
        "anchor": true,
        "align": ["left", "center", "right"],
        "className": true,
        "customClassName": true,
        "spacing": {
            "margin": true,
            "padding": true
        }
    },
    "styles": [
        {
            "name": "default",
            "label": "Standard",
            "isDefault": true
        },
        {
            "name": "minimal", 
            "label": "Minimalista"
        },
        {
            "name": "red",
            "label": "Rosso"
        },
        {
            "name": "green", 
            "label": "Verde"
        },
        {
            "name": "blue",
            "label": "Blu"
        }
    ],
    "textdomain": "twentytwentyfive-child"
}